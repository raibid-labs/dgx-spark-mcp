# DGX Spark MCP Server Configuration

# Server Configuration
NODE_ENV=development
DGX_MCP_PORT=3000
DGX_MCP_HOST=localhost

# Logging Configuration
DGX_MCP_LOG_LEVEL=info
DGX_MCP_LOG_FORMAT=json
DGX_MCP_LOG_DIR=./logs
DGX_MCP_LOG_MAX_FILES=10
DGX_MCP_LOG_MAX_SIZE=10m

# MCP Protocol Configuration
DGX_MCP_SERVER_NAME=dgx-spark-mcp
DGX_MCP_SERVER_VERSION=0.1.0
DGX_MCP_TRANSPORT=stdio

# Hardware Detection Configuration
DGX_MCP_NVIDIA_SMI_PATH=/usr/bin/nvidia-smi
DGX_MCP_HARDWARE_CACHE_TTL=30000
DGX_MCP_ENABLE_GPU_MONITORING=true

# Spark Configuration
DGX_MCP_SPARK_HOME=/opt/spark
DGX_MCP_SPARK_CONF_DIR=/opt/spark/conf

# Performance Configuration
DGX_MCP_ENABLE_METRICS=true
DGX_MCP_METRICS_INTERVAL=60000
DGX_MCP_HEALTH_CHECK_INTERVAL=30000

# Security Configuration
DGX_MCP_ENABLE_AUTH=false
DGX_MCP_API_KEY=
