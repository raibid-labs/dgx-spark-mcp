{
  "name": "@dgx/spark-mcp",
  "version": "0.1.0",
  "description": "Model Context Protocol server for DGX Spark optimization and hardware introspection",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "validate-config": "node dist/config/validate.js",
    "clean": "rm -rf dist",
    "docs:build": "node dist/docs/indexer.js",
    "docs:search": "node dist/docs/search.js",
    "test:docs": "npm run build && npm run docs:build"
  },
  "keywords": [
    "mcp",
    "dgx",
    "spark",
    "nvidia",
    "gpu",
    "optimization",
    "model-context-protocol"
  ],
  "author": "Raibid Labs",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^16.4.5",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
